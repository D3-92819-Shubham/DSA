package que02;


public class List {
	
	static class Node
	{
		private int data;
		private Node next;
		
		public Node(int value)
		{
			data = value;
			next = null;
		}
		
	}
	
	private Node head;
	
	public List()
	{
		head = null;
	}
	
	
	public void addFirst(int value) {
		
		Node newnode = new Node(value);

		if(head == null)
		{
			head = newnode;
		}
		
		else
		{
			newnode.next = head;
			head = newnode;
		
		}
	}
	
	public void display() {
		
		Node trav = head;
		
		while(trav != null)
		{
			System.out.print(" "+trav.data);
			trav = trav.next;
		}
		
		System.out.println();
	}
	
	
	public void AddbySort(int data) {
		
		Node newnode = new Node(data);
		
		Node trav = head;
		
		if(head == null)
		{
			head = newnode;
		}
		
		else if(head.next == null)
		{
			if(data < head.data)
			{
				newnode.next = head;
				head = newnode;
			}
			
			else if(data > head.data)
			{
				head.next = newnode;
			}
		}
		
		else
		{
			while(trav.next.data < data)
			{
				trav = trav.next;
			}
			
			newnode.next = trav.next;
			
			trav.next = newnode;
		}
		
			
		
	}
	
	
	
}

