package ass1;

public class List {
	
	static class Node
	{
		private int data;
		private Node next;
		
		public Node(int value)
		{
			data = value;
			next = null;
		}
		
	}
	
	private Node head;
	
	public List()
	{
		head = null;
	}
	
	
	public void addFirst(int value) {
		
		Node newnode = new Node(value);

		if(head == null)
		{
			head = newnode;
		}
		
		else
		{
			newnode.next = head;
			head = newnode;
		}
	}
	
	public void display() {
		
		Node trav = head;
		
		while(trav != null)
		{
			System.out.print(" "+trav.data);
			trav = trav.next;
		}
		
		System.out.println();
	}
	
	public void insertAfter(int data, int value)
	{
		
		Node trav = head;
		Node newnode = new Node(value);
		
		
		if(trav.next.next.data == data)
		{
			newnode.next = trav.next.next;
			
			trav.next = newnode;
			
		}
	}

}
