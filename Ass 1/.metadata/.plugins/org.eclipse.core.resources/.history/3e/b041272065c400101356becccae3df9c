package que03;

public class List {
	
	static class Node
	{
		private int data;
		private Node next;
		
		public Node(int value)
		{
			data = value;
			next = null;
		}
		
	}
	
	private Node head;
	private Node tail;
	int size;
	
	public List()
	{
		head = null;
		tail = null;
		size = 0;
	}
	
	public boolean isEmpty()
	{
		return tail == null;
	}
	
	public int size()
	{
		return size;
	}
	
	public void addFirst(int value)
	{
		Node newnode = new Node(value);
		
		if(tail == null)
		{
			head = tail = newnode;
		}
		
		else
		{
			newnode.next = tail.next;
			tail.next = newnode;

		}
		
		size++;
	}
	
	public void addLast(int value)
	{
		Node newnode = new Node(value);
		
		if(tail == null)
		{
			tail = newnode;
		}
		
		else
		{
			tail.next = newnode;
			newnode.next = tail.next;
			tail = newnode;
		}
		
		size++;
	}
	
	public void display() {
		

		
		
		Node trav = tail;
			
		//	System.out.println(tail.data);
			do
			{
				System.out.println(" "+trav.data);
				trav = trav.next;
			}while(trav != tail);
		
			System.out.println("");

		
	}

	

}
